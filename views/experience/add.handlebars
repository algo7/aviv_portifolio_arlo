<!-- CONTACT -->
<div class="arlo_tm_section" id="contact">
    <div class="arlo_tm_contact">
        <div class="container">
            <div class="arlo_title_holder">
                <span>Add</span>
                <h3>Your Experience</h3>
            </div>
            <div class="contact_inner">
                <div class="fields">

                    {{!-- Form --}}
                    <form action="/add" method="post" class="contact_form" id="contact_form">
                        <div class="returnmessage"
                            data-success="Your message has been received, We will contact you soon.">
                        </div>
                        <div class="empty_notice"><span>Please Fill Required Fields</span></div>
                        <div class="first">

                            <ul>

                                <li>
                                    <label for="year">Year:</label>
                                    <textarea id="year" name="year" class="editText" placeholder="Year"></textarea>
                                </li>
                                <li>
                                    <label for="location">Location:</label>
                                    <textarea id="location" name="location" class="editText"
                                        placeholder="Location"></textarea>
                                </li>
                                <li>
                                    <label for="position">Position:</label>
                                    <textarea id="position" name="position" class="editText"
                                        placeholder="Position"></textarea>
                                </li>
                                <li>
                                    <label for="link">Link:</label>
                                    <textarea id="link" name="link" class="editText" placeholder="Link"></textarea>
                                </li>

                                <li>
                                    <label class="selection" for="experience_type">Experience Type: </label>
                                    <select id="experience_type" name="type">
                                        <option value="study">Study</option>
                                        <option value="work">Work</option>
                                    </select>
                                </li>

                                <li>
                                    <label class="selection" for="portfolio_section">Portfolio Section: </label>
                                    <select id="portfolio_section" name="section">
                                        <option value="hotelier">Hotelier</option>
                                        <option value="developer">Developer</option>
                                        <option value="martial_artist">Martial Artist</option>
                                    </select>
                                </li>

                            </ul>
                        </div>
                        <div class="last">
                            <label for="description">Description:</label>
                            <textarea id="description" name="description">Description</textarea>
                        </div>


                        <div class="arlo_tm_button">
                            <a id="send_message" href="javascript:{}">Done</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script nonce='{{cspNonce}}' src="/js/forms.js"></script>

<style>
    .editText {
        background-color: #6f6f6f;
    }

    .selection {
        font-family: 'Times New Roman';
        font-size: 2em;
        display: block;
    }
</style>