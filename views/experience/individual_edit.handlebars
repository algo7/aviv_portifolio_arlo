<!-- CONTACT -->
<div class="arlo_tm_section" id="contact">
    <div class="arlo_tm_contact">
        <div class="container">
            <div class="arlo_title_holder">
                <span>Edit</span>
                <h3>Your Thoughts</hh3>
            </div>
            <div class="contact_inner">
                <div class="fields">

                    {{!-- Form --}}
                    <form action="/edit/{{experience._id}}?_=put" method="post" class="contact_form" id="contact_form">
                        <div class="returnmessage"
                            data-success="Your message has been received, We will contact you soon.">
                        </div>
                        <div class="empty_notice"><span>Please Fill Required Fields</span></div>
                        <div class="first">

                            <ul>

                                <li>
                                    <textarea id="message" name="year" class="editText">{{experience.year}}</textarea>
                                </li>
                                <li>
                                    <textarea id="message" name="location"
                                        class="editText">{{experience.location}}</textarea>
                                </li>
                                <li>
                                    <textarea id="message" name="position"
                                        class="editText">{{experience.position}}</textarea>
                                </li>

                                <li>
                                    <label class="selection" for="experience_type">Experience Type: </label>
                                    <select id="experience_type" name="typeImageUrl">
                                        <option value="study">Study</option>
                                        <option value="work">Work</option>
                                    </select>
                                </li>

                            </ul>
                        </div>
                        <div class="last">
                            <textarea id="message" name="description">{{experience.description}}</textarea>
                        </div>


                        <div class="arlo_tm_button">
                            <a id="send_message" href="javascript:{}"
                                onclick="document.getElementById('contact_form').submit();">Done</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /CONTACT -->

<style>
    .editText {
        background-color: #6f6f6f;
    }

    .selection {
        font-family: 'Times New Roman';
        font-size: 2em;
    }
</style>